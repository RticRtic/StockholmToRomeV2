<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70B8B8"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/stockholm_picture"
        android:layout_width="413dp"
        android:layout_height="227dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/questionTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stockholm" />

    <TextView
        android:id="@+id/questionTv"
        android:layout_width="357dp"
        android:layout_height="191dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="#4C8CD8"
        android:elevation="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="textview"
        android:textColor="#212121"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockholm_picture" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="277dp"
        android:layout_height="98dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#274EBD"
        android:text="press to Start the journey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTv" />

    <TextView
        android:id="@+id/userSeeGameNameTv"
        android:layout_width="225dp"
        android:layout_height="72dp"
        android:text="STOCKHOLM TO ROME"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/stockholm_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stockholm_picture"
        app:layout_constraintVertical_bias="0.58" />

    <EditText
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTv" />

</androidx.constraintlayout.widget.ConstraintLayout>

